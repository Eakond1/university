#include <iostream>
#include <math.h>
using namespace std;

int main() {
	setlocale(LC_ALL,"rus");
	double h,r,R,l,V,S;
	cout<<"Введите высоту, больший и меньший радиусы усеченного конуса"<<endl;
	cin>>h>>R>>r;
	if ( R>r){
		l = sqrt((R-r)*(R-r) + h*h);
	}
	else{
		l = sqrt((r-R)*(r-R) + h*h);
	}
	if ((h>0)&&(r>0)&&(R>0)){
		V = 1.0/3.0*3.14*h*(R*R+R*r+r*r);
		S = 3.14*(R*R+(R+r)*l+r*r);
		cout<<"Объем конуса = "<<V<<endl;
		cout<<"Площадь поверхности усеченного конуса = "<<S<<endl;
	}
}
