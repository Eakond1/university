#include <iostream>
using namespace std;

int main() {
	setlocale(LC_ALL,"rus");
	double b,c,x;
	cout<<"Введите 2 числа: b и c"<<endl;
	cin>>b>>c;
	if ((c==0)&& (b==0)){
		cout<<"бесконечное количество решений";
	}
	else if (b==0){
		cout<<"нет решений";
	}
	else if (c==0){
		cout<<"бесконечное количество решений";
	}
	else if ((b!=0)&&(c!=0)){
	cout<<"результат bx + c, x =";
		x = (-c)/b;
	cout<<" "<<x;
	}
	return (0);
}
